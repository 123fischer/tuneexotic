<div class="container">
  <div class="row justify-content-center">
    <div class="card-form">
      <h2>Edit <%= @tune.name %> !</h2>
      <%= simple_form_for @tune do |f| %>
        <%= f.input :name, required: true %>
        <%= f.input :description, as: :text %>
        <%= f.input :music, as: :file, required: true %>
        <%= f.submit "Let's go!", class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>
